# Jira OAuth Configuration
# Get these from your Jira Cloud instance at https://developer.atlassian.com/apps/

# OAuth Client ID from Atlassian App Registry
JIRA_CLIENT_ID=your_jira_client_id

# OAuth Client Secret from Atlassian App Registry
JIRA_CLIENT_SECRET=your_jira_client_secret

# Redirect URI - must match exactly in Atlassian App Registry
JIRA_CALLBACK_URL=http://localhost:3001/auth/jira/callback

# Base URL of your Jira instance (Cloud)
JIRA_BASE_URL=https://your-domain.atlassian.net

# Session Configuration
SESSION_SECRET=your_session_secret_key_here_generate_random_string

# Server Configuration
PORT=3001
NODE_ENV=development

# Optional: Jira Project Key (used for ticket creation)
JIRA_PROJECT_KEY=MVM
