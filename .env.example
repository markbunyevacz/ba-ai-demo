# BA AI Demo - Environment Configuration

# Server Configuration
PORT=5000
APP_URL=http://localhost:5000

# AI Provider Selection
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4-turbo-preview

# Anthropic Configuration (for LangGraph agents)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.3
ANTHROPIC_TIMEOUT_MS=60000

# LangGraph Agent Configuration
LANGGRAPH_ENABLED=false
LANGGRAPH_FALLBACK_MODE=auto
LANGGRAPH_HEALTH_CHECK_INTERVAL_MS=300000
LANGGRAPH_MAX_RETRIES=3
LANGGRAPH_RETRY_DELAY_MS=2000

# LangSmith Telemetry (optional)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=ba-ai-demo
LANGSMITH_TRACING_ENABLED=false

# Jira Integration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_CLIENT_ID=your_jira_client_id
JIRA_CLIENT_SECRET=your_jira_client_secret
JIRA_CALLBACK_URL=http://localhost:5000/auth/jira/callback
JIRA_PROJECT_KEY=MVM
JIRA_RATE_LIMIT=45
JIRA_RATE_LIMIT_INTERVAL_MS=60000
JIRA_RATE_LIMIT_RPS=4.5
